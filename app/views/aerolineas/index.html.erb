<h1>Listado de aerolineas</h1>
<div class="container">
  <div class="table-responsive">
<table class="table table-bordered table-hover">
  <thead>
    <tr class="success">
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aerolineas.each do |aerolinea| %>
      <tr>
        <td><%= aerolinea.nombre %></td>
        <td><%= aerolinea.direccion %></td>
        <td><%= aerolinea.telefono %></td>
        <td><%= link_to 'Ver', aerolinea %></td>
        <td><%= link_to 'Editar', edit_aerolinea_path(aerolinea) %></td>
        <td><%= link_to 'Eliminiar', aerolinea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'Nueva Aerolinea', new_aerolinea_path %>
