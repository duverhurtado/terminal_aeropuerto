<h1>Listado de pasajes</h1>
<div class="table-responsive">
<table  class="table table-bordered table-hover">
  <thead>
    <tr  class="success">
      <th>Cliente</th>
      <th>Vuelo</th>
      <th>Clase</th>
      <th>Asiento</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pasajes.each do |pasaje| %>
      <tr>
        <td><%= pasaje.cliente.rut %></td>
        <td><%= pasaje.vuelo.num_vuelo %></td>
        <td><%= pasaje.clase.t_clase %></td>
        <td><%= pasaje.asiento %></td>
        <td><%= pasaje.valor %></td>
        <td><%= link_to 'Ver', pasaje %></td>
        <td><%= link_to 'Editar', edit_pasaje_path(pasaje) %></td>
        <td><%= link_to 'Eliminar', pasaje, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo Pasaje', new_pasaje_path %>
