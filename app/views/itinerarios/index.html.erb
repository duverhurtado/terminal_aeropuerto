<h1>Listado itinerarios</h1>
<div class="table-responsive">
<table class="table table-bordered table-hover">
  <thead>
    <tr class="success">
      <th>Codigo it</th>
      <th>Destino</th>
      <th>Origen</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itinerarios.each do |itinerario| %>
      <tr>
        <td><%= itinerario.codigo_it %></td>
        <td><%= itinerario.destino.ciudad %></td>
        <td><%= itinerario.origen.ciudad %></td>
        <td><%= itinerario.fecha %></td>
        <td><%= itinerario.hora %></td>
        <td><%= link_to 'Ver', itinerario %></td>
        <td><%= link_to 'Editar', edit_itinerario_path(itinerario) %></td>
        <td><%= link_to 'Eliminar', itinerario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo  Itinerario', new_itinerario_path %>
